<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/preview_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Preview"
        style="@style/TextAppearance.Material3.TitleMedium" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/preview_image_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="2:3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/preview_image_title"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/paper" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/preview_image_source"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="@id/preview_image_background"
        app:layout_constraintStart_toStartOf="@id/preview_image_background"
        app:layout_constraintEnd_toEndOf="@id/preview_image_background"
        app:layout_constraintBottom_toBottomOf="@id/preview_image_background"
        tools:src="@drawable/onboarding_biology" />

</androidx.constraintlayout.widget.ConstraintLayout>